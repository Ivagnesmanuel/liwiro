  <div class="col-sm-3 mb-5"><%= image_tag("contatto2.png", :size =>"100x100") %><br /><h3>Partecipate!</h3></div>
  <div class="col-sm-3 mb-5"><%= image_tag("like.png", :size =>"100x100") %><br /><h3>Evaluate!</h3></div>
